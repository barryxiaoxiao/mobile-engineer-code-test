<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.index.IndexActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:gravity="center"
        android:text="@string/market"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_64"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rlCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="#11FFFFFF"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_1"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/equityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@android:color/transparent"
                android:text="@string/equity"
                android:textColor="#7082AE"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/equity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/equityLabel"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_toEndOf="@id/equityLabel"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="$1,000,000.32" />

            <TextView
                android:id="@+id/balanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@android:color/transparent"
                android:text="@string/balance"
                android:textColor="#7082AE"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/balanceLabel"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@id/balanceLabel"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="$1,000,000.32" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="#55cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/marginLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@android:color/transparent"
                android:text="@string/margin"
                android:textColor="#7082AE"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/marginLabel"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_toEndOf="@id/marginLabel"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="$1,000,000.32" />

            <TextView
                android:id="@+id/usedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@android:color/transparent"
                android:text="@string/used"
                android:textColor="#7082AE"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/usedLabel"
                android:layout_marginStart="76dp"
                android:layout_toEndOf="@id/usedLabel"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="$1,000,000.32" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCurrency"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/rlCurrency"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_marginEnd="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/symbol"
            android:textColor="#7082AE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/change"
            android:textColor="#7082AE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sell"
            android:textColor="#7082AE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/buy"
            android:textColor="#7082AE"
            android:textSize="30sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/llCurrency"
        android:background="#7082AE" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currencyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llTab"
        android:layout_below="@id/llCurrency"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/dp_30" />


    <LinearLayout
        android:id="@+id/llTab"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#55cccccc"
            android:drawableTop="@mipmap/setip"
            android:gravity="center"
            android:padding="4dp"
            android:text="AAAA"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#33cccccc"
            android:drawableTop="@mipmap/setip"
            android:gravity="center"
            android:padding="4dp"
            android:text="BBBB"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#22cccccc"
            android:drawableTop="@mipmap/setip"
            android:gravity="center"
            android:padding="4dp"
            android:text="CCCC"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#11cccccc"
            android:drawableTop="@mipmap/setip"
            android:gravity="center"
            android:padding="4dp"
            android:text="DDDD"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22ffffff"
        android:visibility="gone">

        <ProgressBar
            style="?android:progressBarStyleLargeInverse"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:indeterminateTint="@color/white" />

    </RelativeLayout>


</RelativeLayout>